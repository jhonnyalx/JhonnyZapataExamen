<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JhonnyZapataExamen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image  Aspect="AspectFit" HeightRequest="60" WidthRequest="70" Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario"></Entry>
            <Entry x:Name="txtPassword" IsPassword="True" Placeholder="Ingrese Password"></Entry>
            <Button x:Name="btnLogear" Text="Ingresar" Clicked="btnLogear_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>